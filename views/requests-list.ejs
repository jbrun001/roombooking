<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookit / Booking Requests List</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <%- include('header-menu') %>
    <div class="content-list">
        <div class="left-column">
            <%- include('filters') %>
        </div>
        <div class="right-column">
            <h2 class="current-bookings-title">Bookings Awaiting Approval</h2>
            <div class="order-by-button-wrapper">
                <form id = "orderForm" class="card-wrapper" action="/requests-list-filtered" method="POST">
                    <button class="button-link" name="orderSelection" type="submit" value="o_b_Room">Order by Building</button>
                    <button class="button-link" name="orderSelection" type="submit" value="o_b_Time">Order by Upcoming Date/Time</button>
                </form>
                <script>
                    // Attach the event listener to the form
                    $(document).ready(function() {
                        console.log("Checking bookings");
                        // Attach the event listener to buttons within the form
                        $('#orderForm .button-link').on('click', function(e) {
                            e.preventDefault(); // Prevent default button action
                    
                            var orderValue = $(this).val(); // Get the value of the clicked button
                            // Serialize the form data and append the clicked button value
                            var formData = $('#orderForm').serialize() + '&orderSelection=' + encodeURIComponent(orderValue);
                            // Send the AJAX request
                            $.ajax({   
                                // Send the form data to the server
                                type: "POST",
                                url: $('#orderForm').attr('action'),
                                data: formData, // Include the clicked button value explicitly
                                success: function(response) {
                                    // Update the bookings list with the response
                                    $('.data-list').html($(response).find('.data-list').html());
                                    // remove the new data animation if it has already been added
                                    $('.data-list').removeClass('newDataLoadedEffect');
                                    // force the animation to run again
                                    void $('.data-list')[0].offsetWidth;
                                    // re-add the animation on the new data
                                    $('.data-list').addClass('newDataLoadedEffect');
                                }
                            });
                        });
                    });
                    </script>                                
            </div>
            <!-- This is where the list will go -->
            <ul class="data-list">
                <!-- TO DO: Have for loop iterate through all rooms matching filter criteria -->
                <% for (let i = 0; i < bookings.length; i++) { %>
                    <li>
                        <div class="card-wrapper">
                            <img class="room-preview-img" src="<%=bookings[i].pictureURL%>" alt="Room Preview Image" class="room-preview-image">
                            <div class="card-outline">
                                <div class="card-column">
                                    <div class="room-data">
                                        <div>Room Number: <%=bookings[i].roomNumber%></div>
                                        <div>Building: <%=bookings[i].building%></div>
                                    </div>
                                    <div class="time-data">
                                        <div>Date: <%=bookings[i].date%></div>
                                        <div>Timeslot: <%=bookings[i].timeslot%></div>
                                    </div>
                                </div>
                                <div class="card-column">
                                    <div class="user-data">
                                        <div>Booked by: <%=bookings[i].bookedBy%></div>
                                        <div>Status: <%=bookings[i].Status%></div>
                                        <% if (bookings[i].raApproved == 1) { %>
                                            <div>Risk Assessment: Approved</div>
                                        <% } else if (bookings[i].raApproved == 0) { %>
                                            <div>Risk Assessment: Approved</div>
                                        <% } else { %>
                                            <div>Risk Assessment: Not reviewed</div>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="card-column">
                                    <a href="/review-booking/<%=bookings[i].bookingId%>" class="button-link">Review Booking</a>
                                </div>
                            </div>
                        </div>
                    </li>
                <% } %>
            </ul>
            <% if (bookings.length == 0) { %>
                <h2 class="none-found">No bookings found :(</h2>
            <% } %>
        </div>
    </div>
    <%- include('footer') %>
</body>
</html>
