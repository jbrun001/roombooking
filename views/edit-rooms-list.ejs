<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookit / Edit Room / find a room</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="styles.css">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
</head>
<body>
    <%- include('header-menu') %>
    <div class="content-list">
        <div class="left-column">
            <%- include('filters') %>
        </div>
        <div class="right-column">
            <h2 class="current-bookings-title">Search for a room to edit</h2>
            <div class="order-by-button-wrapper">
                <form id = "orderForm" class="card-wrapper" action="/edit-rooms-list-filtered" method="POST">
                    <button class="button-link-order" name="orderSelection" type="submit" value="o_b_Building">Order by Building</button>
                    <button class="button-link-order" name="orderSelection" type="submit" value="o_b_Capacity">Order by Capacity</button>
                </form>
                <script>
                    // Attach the event listener to the form
                    $(document).ready(function() {
                        // Attach the event listener to buttons within the form
                        $('#orderForm .button-link-order').on('click', function(e) {
                            e.preventDefault(); // Prevent default button action
                    
                            var orderValue = $(this).val(); // Get the value of the clicked button
                            // Serialize the form data and append the clicked button value
                            var formData = $('#orderForm').serialize() + '&orderSelection=' + encodeURIComponent(orderValue);
                            // Send the AJAX request
                            $.ajax({   
                                // Send the form data to the server
                                type: "POST",
                                url: $('#orderForm').attr('action'),
                                data: formData, // Include the clicked button value explicitly
                                success: function(response) {
                                    // Update the bookings list with the response
                                    $('.data-list').html($(response).find('.data-list').html());
                                    // remove the new data animation if it has already been added
                                    $('.data-list').removeClass('newDataLoadedEffect');
                                    // force the animation to run again
                                    void $('.data-list')[0].offsetWidth;
                                    // re-add the animation on the new data
                                    $('.data-list').addClass('newDataLoadedEffect');
                                }
                            });
                        });
                    });
                    </script>                                
            </div>
            <!-- This is where the list will go -->
            <ul class="data-list">
                <!-- TO DO: Have for loop iterate through all rooms matching filter criteria -->
                <% for (let i = 0; i < rooms.length; i++) { %>
                    <li>
                        <div class="card-wrapper">
                            <img src="<%=rooms[i].pictureURL%>" alt="Room Preview Image" class="room-preview-image">
                            <div class="card-outline">
                                <div class="card-column">
                                    <div class="room-data">
                                        <div>Room Number: <%=rooms[i].roomNumber%></div>
                                        <div>Building: <%=rooms[i].building%></div>
                                    </div>
                                </div>
                                <div class="card-column">
                                    <div class="user-data">
                                        <div>Room Type: <%=rooms[i].roomType%></div>
                                        <div>Seating Capacity: <%=rooms[i].capacity%></div>
                                    </div>
                                </div>
                                <div class="card-column">
                                    <form id = "actionButtons" class="card-wrapper" action="/edit-room" method="POST">
                                        <input type="hidden" name="roomId" value="<%=rooms[i].roomId%>">
                                        <button class="button-link" name="editSubmit" type="submit">Edit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </li>
                <% } %>
            </ul>
            <% if (rooms.length == 0) { %>
                <h2 class="none-found">No rooms found :(</h2>
            <% } %>
        </div>
    </div>
    <%- include('footer') %>
</body>
</html>
